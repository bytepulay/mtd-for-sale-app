            <android.support.v7.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/white"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp">




                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textAlignment="center"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:text="ဘောင်ချာ နံပါတ်"/>

                    <Button
                        android:id="@+id/scanForvoucher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:text="Scan"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_login_back"/>

                    <me.myatminsoe.mdetect.MMEditText
                        android:id="@+id/voucherNumber"
                        android:hint="ဘောင်ချာ နံပါတ်"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:textAllCaps="false"
                        android:background="@drawable/custom_edittext_form_background"/>





                    <EditText
                        android:layout_weight="8"
                        android:id="@+id/saleDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:focusable="false"
                        android:hint="Date"
                        android:background="@drawable/custom_edittext_form_background"/>





                    <LinearLayout
                        android:weightSum="10"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_weight="5"
                            android:id="@+id/custBuyNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAllCaps="false"
                            android:hint="Qualtity"
                            android:background="@drawable/custom_edittext_form_background"
                            android:padding="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"/>

                        <EditText
                            android:layout_weight="5"
                            android:id="@+id/custDiscountPoint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAllCaps="false"
                            android:hint="0.8"
                            android:background="@drawable/custom_edittext_form_background"
                            android:padding="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:weightSum="15"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/kyat"
                            android:layout_weight="5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_edittext_form_background"
                            android:padding="10dp"
                            android:hint="က်ပ္"
                            android:inputType="number"
                            android:layout_margin="20dp"/>

                        <EditText
                            android:id="@+id/pel"
                            android:layout_weight="5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_edittext_form_background"
                            android:padding="10dp"
                            android:hint="ပဲ"
                            android:inputType="number"
                            android:layout_margin="20dp"/>

                        <EditText
                            android:id="@+id/yawe"
                            android:layout_weight="5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_edittext_form_background"
                            android:padding="10dp"
                            android:hint=" ေရြး"
                            android:inputType="number"
                            android:layout_margin="20dp"/>

                    </LinearLayout>


                    <EditText
                        android:id="@+id/gram"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Gram"
                        android:background="@drawable/custom_edittext_form_background"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="10dp"
                        android:layout_marginTop="10dp"/>



                    <EditText
