<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@android:color/white"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">




            <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:text="Create New Customer"/>

            <EditText
                android:id="@+id/voucherNumber"
                android:hint="Voucher Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textAllCaps="false"
                android:background="@drawable/custom_edittext_form_background"/>





            <EditText
                android:layout_weight="8"
                android:id="@+id/saleDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:focusable="false"
                android:hint="Date"
                android:background="@drawable/custom_edittext_form_background"/>





        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_weight="5"
                android:id="@+id/custBuyNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:hint="Qualtity"
                android:background="@drawable/custom_edittext_form_background"
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_weight="5"
                android:id="@+id/custDiscountPoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:hint="0.8"
                android:background="@drawable/custom_edittext_form_background"
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

            <LinearLayout
                android:weightSum="15"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/kyat"
                    android:layout_weight="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_edittext_form_background"
                    android:padding="10dp"
                    android:hint="က်ပ္"
                    android:inputType="number"
                    android:layout_margin="20dp"/>

                <EditText
                    android:id="@+id/pel"
                    android:layout_weight="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_edittext_form_background"
                    android:padding="10dp"
                    android:hint="ပဲ"
                    android:inputType="number"
                    android:layout_margin="20dp"/>

                <EditText
                    android:id="@+id/yawe"
                    android:layout_weight="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_edittext_form_background"
                    android:padding="10dp"
                    android:hint=" ေရြး"
                    android:inputType="number"
                    android:layout_margin="20dp"/>

            </LinearLayout>


            <EditText
                android:id="@+id/cupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cupon Code"
                android:background="@drawable/custom_edittext_form_background"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:layout_marginTop="10dp"/>



            <RadioGroup
                android:id="@+id/radioGroup"
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:checked="true"
                    android:id="@+id/radioNewCustomer"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="new customer"/>

                <RadioButton
                    android:id="@+id/radioExistingCustomer"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="existing customer"/>
            </RadioGroup>

            <LinearLayout
                android:id="@+id/newCustomerLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <EditText
                android:id="@+id/shopName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Shop Name"
                android:background="@drawable/custom_edittext_form_background"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:layout_marginTop="10dp"/>



            <EditText
                android:id="@+id/custName"
                android:hint="Customer Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textAllCaps="false"
                android:background="@drawable/custom_edittext_form_background"/>



            <EditText
                android:id="@+id/custPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:hint="Phone Number"
                android:background="@drawable/custom_edittext_form_background"
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:inputType="phone"
                android:layout_marginTop="10dp"/>



                <EditText
                    android:id="@+id/custDOB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:hint="Date Of Birth"
                    android:background="@drawable/custom_edittext_form_background"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"/>


                <EditText
                    android:id="@+id/custUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:hint="Customer UserName"
                    android:background="@drawable/custom_edittext_form_background"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"/>


                <EditText
                    android:id="@+id/custPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:hint="Customer Password"
                    android:background="@drawable/custom_edittext_form_background"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"/>



            </LinearLayout>



                <LinearLayout
                    android:id="@+id/searchWithPhoneLayout"
                    android:visibility="invisible"
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <EditText
                        android:id="@+id/searchPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/ed_stoke"
                        android:hint="Enter Phone Number"
                        android:inputType="phone"
                        android:padding="10dp"
                        android:textAllCaps="false"
                        />

                    <ImageButton
                        android:id="@+id/searchButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/icon_search"
                        android:padding="10dp"
                        android:src="@android:drawable/ic_menu_search" />


                </LinearLayout>
            

            <LinearLayout
                android:layout_marginBottom="100dp"
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

           <Button
               android:layout_marginLeft="30dp"
               android:layout_marginTop="10dp"
               android:layout_marginRight="30dp"
               android:padding="15dp"
               android:layout_weight="5"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textSize="18sp"
               android:textColor="#FFF"
               android:background="@drawable/button_login_back"/>

            <Button
                android:padding="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="5"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textColor="#FFF"
                android:textSize="18sp"
                android:background="@drawable/button_login_back"/>

            </LinearLayout>


        </LinearLayout>
        </android.support.v7.widget.CardView>

    </ScrollView>

</LinearLayout>